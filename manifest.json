{
  "manifest_version": 3,
  "name": "RavenVault",
  "short_name": "RavenVault",
  "version": "0.9.0",
  "description": "Export Poe.com AI conversations to Obsidian as Markdown",
  "homepage_url": "https://ravenvault.app",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://poe.com/*",
    "https://*.poe.com/*",
    "https://poecdn.net/*",
    "https://*.poecdn.net/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": { 
    "service_worker": "background.js" 
  },
  "action": { 
    "default_title": "RavenVault",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}